FROM ubuntu:latest
LABEL maintainer "fadlyas07 <mhmmdfdlyas@gmail.com>"

ARG LC_ALL=C.UTF-8
ARG DEBIAN_FRONTEND=noninteractive

RUN apt-get update -qqy && \
    apt-get install --no-install-recommends -y \
        wget \
        automake \
        autoconf \
        autopoint \
        bc \
        binutils-dev \
        bison \
        build-essential \
        ca-certificates \
        ccache \
        clang \
        cmake \
        curl \
        dos2unix \
        expat \
        libexpat1-dev \
        file \
        flex \
        git \
        git-lfs \
        gcc \
        gcc-10 \
        g++ \
        g++-10 \
        gperf \
        gawk \
        gettext \
        gnupg \
	help2man \
        libcap-dev \
        libtool \
        libelf-dev \
        libssl-dev \
        libncurses5-dev \
        libgmp-dev \
        libmpc-dev \
        libmpfr-dev \
        liblzma-dev \
        libz-dev \
        lz4 \
        liblz4-tool \
        liblz4-dev \
        lzma \
        lld \
        make \
        ncurses-dev \
        ninja-build \
        mercurial \
        python-all-dev \
        python3-dev \
        pkg-config \
        rclone \
        texinfo \
        txt2man \
        tzdata \
        u-boot-tools \
        sudo \
        xz-utils \
        zlib1g-dev \
        patch \
        patchelf \
        subversion \
        software-properties-common \
        llvm \
        xxd \
        ssh --fix-broken --fix-missing && \
    apt-get autoremove -qqy && \
    apt-get autoclean -qqy

RUN ubuntu_codename=$(lsb_release -c | cut -f2) && \
    wget https://apt.llvm.org/llvm-snapshot.gpg.key && \
    sudo apt-key add llvm-snapshot.gpg.key && \
    sudo add-apt-repository "deb http://apt.llvm.org/$ubuntu_codename/ llvm-toolchain-$ubuntu_codename main"
RUN rm -rf /var/lib/apt/lists/*
RUN git config --global user.name "fadlyas07"
RUN git config --global user.email "mhmmdfdlyas@gmail.com"
ENV USE_CCACHE=1

CMD ["/bin/bash"]
