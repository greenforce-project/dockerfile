FROM ubuntu:20.10
LABEL maintainer "Muhammad Fadlyas <mhmmdfdlyas@gmail.com>"

ARG LC_ALL=C.UTF-8
ARG DEBIAN_FRONTEND=noninteractive

ENV TZ=Asia/Jakarta
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update -qqy && \
    apt-get install --no-install-recommends -y \
        automake \
        autoconf \
        autopoint \
        bc \
        binutils-dev \
        bison \
        build-essential \
        ca-certificates \
        ccache \
        clang \
        cmake \
        curl \
        expat \
        libexpat1-dev \
        file \
        flex \
        git \
        gcc \
        gcc-10 \
        g++ \
        g++-10 \
        gperf \
        gawk \
        gettext \
        libcap-dev \
        libtool \
        libelf-dev \
        libssl-dev \
        libncurses5-dev \
        libgmp-dev \
        libmpc-dev \
        libmpfr-dev \
        liblzma-dev \
        libz-dev \
        lz4 \
        liblz4-tool \
        liblz4-dev \
        lzma \
        lld \
        make \
        ncurses-dev \
        ninja-build \
        mercurial \
        python-all-dev \
        python3-dev \
        pkg-config \
        rclone \
        texinfo \
        txt2man \
        u-boot-tools \
        xz-utils \
        zlib1g-dev \
        patch \
        patchelf \
        subversion \
        llvm \
        ssh --fix-broken --fix-missing && \
    apt-get autoremove -qqy && \
    apt-get autoclean -qqy

RUN rm -rf /var/lib/apt/lists/*
RUN git config --global user.name "Muhammad Fadlyas"
RUN git config --global user.email "mhmmdfdlyas@gmail.com"
ENV USE_CCACHE=1

CMD ["/bin/bash"]
