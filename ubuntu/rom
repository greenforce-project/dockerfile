FROM ubuntu:latest
LABEL maintainer "fadlyas07 <mhmmdfdlyas@proton.me>"

ENV LANG=C.UTF-8
ENV DEBIAN_FRONTEND=noninteractive
ENV JAVA_OPTS="-Xmx7G"
ENV JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
ENV target_repo="https://github.com/akhilnarang/scripts"

# Install dependencies
RUN apt-get update -qqy && \
    apt-get install --no-install-recommends -y \
        adb \
        autoconf \
        automake \
        axel \
        aria2 \
        bc \
        bison \
        build-essential \
        ca-certificates \
        ca-certificates-java \
        ccache \
        clang \
        cmake \
        curl \
        dos2unix \
        expat \
        fastboot \
        ffmpeg \
        flex \
        gcc \
        gcc-multilib \
        g++ \
        g++-multilib \
        gawk \
        gh \
        git \
        git-lfs \
        gnupg \
        glibc-doc \
        gperf \
        htop \
        hub \
        imagemagick \
        jq \
        lib32ncurses5-dev \
        lib32z1-dev \
        libc6-dev \
        libcap-dev \
        libexpat1-dev \
        libgmp-dev \
        liblz4-dev \
        liblz4-tool \
        libmpc-dev \
        libmpfr-dev \
        libncurses5 \
        libncurses5-dev \
        libssl-dev \
        libstdc++6 \
        libtinfo5 \
        libtool \
        libxml-simple-perl \
        libxml2 \
        libxml2-utils \
        locales \
        lsb-core \
        lzip \
        lz4 \
        lzop \
        make \
        maven \
        nano \
        ncftp \
        nodejs \
        openssh-server \
        openssl \
        patch \
        patchelf \
        pkg-config \
        pigz \
        pixz \
        pngcrush \
        pngquant \
        p7zip-full \
        p7zip-rar \
        python3 \
        python3-dev \
        python-is-python3 \
        re2c \
        rclone \
        rsync \
        schedtool \
        squashfs-tools \
        ssh \
        sshpass \
        sudo \
        subversion \
        tar \
        texinfo \
        tmate \
        tzdata \
        wget \
        w3m \
        xsltproc \
        xxd \
        xzdec \
        xz-utils \
        zlib1g-dev \
        zram-config \
        zstd \
        libzstd-dev \
        zip \
        unzip && \
    apt-get autoremove -qqy && \
    apt-get autoclean -qqy && \
    git clone -q $target_repo s && \
    rm -rf s/.git && \
    bash s/setup/android_build_env.sh && \
    echo 'en_GB.UTF-8 UTF-8' > /etc/locale.gen && \
    /usr/sbin/locale-gen && \
    rm -rf /var/lib/apt/lists/* /root/s

# Set global git configurations
RUN git config --global user.name "fadlyas07" && \
    git config --global user.email "mhmmdfdlyas@proton.me" && \
    git config --global core.editor 'nano'

ENV USE_CCACHE=1

CMD ["/bin/bash"]
